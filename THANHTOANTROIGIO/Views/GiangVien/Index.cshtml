@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">
<script src="~/lib/sweet-alert/sweet_alert.js"></script>
<script src="~/lib/script/giang-vien.js"></script>
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


<style>
    * {
        box-sizing: border-box;
    }

    .row {
        margin-left: -5px;
        margin-right: -5px;
    }

    .column {
        float: left;
        width: 50%;
        padding: 5px;
    }

    /* Clearfix (clear floats) */
    .row::after {
        content: "";
        clear: both;
        display: table;
    }

    table {
        border-collapse: collapse;
        border-spacing: 0;
        width: 100%;
        border: 1px solid #ddd;
    }

    th, td {
        text-align: center;
        padding: 16px;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    label {
        font-weight: bold;
    }
</style>

<div class=".container-fluid">
    <div class="row" style="height:600px">
        <div class="column" style="width: 30%; margin-left: 20px">
            <div><label style="display: flex; font-size: 1.3rem; justify-content: center;align-items: center;height: 100%;">DANH SÁCH KHOA</label></div>
            <label for="fname">Mã khoa </label>
            <input type="text" id="MaKhoa" name="fname" readonly="" style="border: 1px solid #aaa; border-radius: 3px; padding: 5px; background-color: transparent; margin-left: 3.5px"><br /><br />
            <label for="fname">Tên khoa</label>
            <input type="text" id="TenKhoa" name="fname" readonly="" style="border: 1px solid #aaa;border-radius: 3px;padding: 5px; background-color: transparent;"><br /><br />

            <table id="table_Khoa" class="display" style="width:100%">
                <thead>
                    <tr>
                        <th>Mã khoa</th>
                        <th>Tên khoa</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
        <div class="column" style="width:67%">
            <label for="fname">Bộ môn</label>
            <select onchange="onChangeSelect(event)" class="form-control" id="select_BoMon" aria-label="Default select example" style="border: 1px solid #aaa; border-radius: 3px; padding: 5px; background-color: transparent; width: 100%; max-width: 100%;">
            </select><br /><br />
            @*   <select class="js-example-basic-single" name="state" id="select_BoMon">
            <option value="AL">Alabama</option>
            ...
            <option value="WY">Wyoming</option>
            </select>*@
            <!-- Button trigger modal -->
            <!--<button type="button" class="btn btn-primary" id="btnThemGV" data-toggle="modal" data-target="#modalAddGV">
            Thêm-->
            <!--data-toggle="modal" data-target="#modalAddGV"-->
            <!--</button>-->
            <!-- Button trigger modal -->
            <button type="button" class="btn btn-primary" id="btnAdd">
                Thêm
            </button>

            <!-- Modal -->
            <!-- Button trigger modal -->
            <!-- Modal -->
            <div class="modal fade modal-lg" id="modalAddGV" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="staticBackdropLabel"></h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form class="row g-3" id="formAddGV" style="margin-bottom:20px">
                                <div class="col-md-3">
                                    <label for="validationDefault01" class="form-label">Mã Giảng Viên</label>
                                    <input type="text" class="form-control" id="maGV">
                                </div>
                                <div class="col-md-3">
                                    <label for="validationDefault01" class="form-label">Họ</label>
                                    <input type="text" class="form-control" id="ho">
                                </div>
                                <div class="col-md-3">
                                    <label for="validationDefault01" class="form-label">Tên</label>
                                    <input type="text" class="form-control" id="ten">
                                </div>

                                <div class="col-md-3">
                                    <label for="validationDefault01" class="form-label">Giới tính</label>
                                    <select class="form-control" id="select_GioiTinh">
                                        <option value="true">Nam</option>
                                        <option value="false">Nữ</option>
                                    </select>
                                </div>
                                <div class="col-md-3">
                                    <label for="validationDefault01" class="form-label">Chức vụ</label>
                                    <select class="form-control" id="select_ChucVu" style="border: 1px solid #aaa; border-radius: 3px; padding: 5px; background-color: transparent; width: 100%; max-width: 100%;"></select>
                                </div>
                                <div class="col-md-3">
                                    <label for="validationDefault01" class="form-label">Chức danh</label>
                                    <select class="form-control" id="select_ChucDanh" style="border: 1px solid #aaa; border-radius: 3px; padding: 5px; background-color: transparent; width: 100%; max-width: 100%;">
                                        <option value="GV">Giảng viên</option>
                                        <option value="GVC">Giảng viên chính</option>
                                        <option value="GVCC">Giảng viên cao cấp</option>
                                    </select>
                                </div>

                                <div class="col-md-3">
                                    <label for="validationDefault01" class="form-label">Học Vị</label>
                                    <br />
                                    <select class="form-control" id="select_HocVi" style="border: 1px solid #aaa; border-radius: 3px; padding: 5px; background-color: transparent; width: 100%; max-width: 100%;"></select>
                                </div>


                                <div class="col-md-3">
                                    <label for="validationDefault01" class="form-label">Ngày sinh</label>

                                    <input type="date" class="form-control" id="ngaySinh" name="ngay-sinh" value="1970-01-01" min="1900-01-01" max="2009-12-31" />
                                </div>
                                <div class="col-md-5">
                                    <label for="validationDefault01" class="form-label">Địa chỉ</label>
                                    <input type="text" class="form-control" id="diaChi">
                                </div>
                                <div class="col-md-3">
                                    <label for="validationDefault01" class="form-label">Số điện thoại</label>
                                    <input type="text" class="form-control" id="sdt">
                                </div>
                                <div class="col-md-3">
                                    <br />
                                    <input type="checkbox" id="gvCoHuu">
                                    <label for="validationDefault01" class="form-label">GV cơ hữu</label>

                                </div>
                                <div class="col-md-3">
                                    <br />
                                    <input type="checkbox" id="checkbox_ChuyenBoMon" onclick="chuyenBoMon()">
                                    <label for="validationDefault01" class="form-label" id="label_ChuyenBoMon">Chuyển bộ môn</label>

                                </div>
                                <div class="col-md-12">
                                    <label for="validationDefault01" class="form-label" id="label_SelectCBM" style="display:none">Bộ môn</label>
                                    <select class="form-control" id="select_ChuyenBoMon" style="border: 1px solid #aaa; border-radius: 3px; padding: 5px; background-color: transparent; width: 100%; max-width: 100%;display:none"></select>
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" id="btnClose">Thoát</button>
                            <button type="button" class="btn btn-primary" id="btnSave">Lưu</button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal fade" id="modalLoading" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered modal-sm">
                    <div class="modal-content" style="background-color:transparent !important; border:none !important">
                        <div class="modal-body">
                            <div class="text-center">
                                <div class="spinner-border" style="width: 3rem; height: 3rem;" role="status">
                                    <span class="visually-hidden">Loading...</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <br />  <br />
            <table id="table_GV" class="display" style="width:100%">
                <thead>
                    <tr>
                        <th>Mã giảng viên</th>
                        <th>Họ</th>
                        <th>Tên</th>
                        <th>Học vị</th>
                        <th>Chức vụ</th>
                        <th>Chức danh</th>
                        <th>Giới tính</th>
                        <th>Ngày sinh</th>
                        <th>Địa chỉ</th>
                        <th>Số điện thoại</th>
                        <th>GV cơ hữu</th>
                        <th>Chỉnh sửa</th>
                        <th>Xóa</th>
                    </tr>
                </thead>
                <tbody id="tbody">
                </tbody>
            </table>
        </div>
    </div>
</div>
