@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">
<script src="~/lib/sweet-alert/sweet_alert.js"></script>
<script src="~/lib/script/nguoi-ky.js"></script>
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<style>
    * {
        box-sizing: border-box;
    }

    .row {
        margin-left: -5px;
        margin-right: -5px;
    }

    .column {
        float: left;
        width: 50%;
        padding: 5px;
    }

    /* Clearfix (clear floats) */
    .row::after {
        content: "";
        clear: both;
        display: table;
    }

    table {
        border-collapse: collapse;
        border-spacing: 0;
        width: 100%;
        border: 1px solid #ddd;
    }

    th, td {
        text-align: center;
        padding: 16px;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    label {
        font-weight: bold;
    }
</style>
<div class=".container-fluid">
    <div class="row" style="height:600px">
        <div class="column" style="width:100%">
            <label style="display: flex; font-size: 1.3rem; justify-content: center;align-items: center;">DANH SÁCH NGƯỜI KÝ</label>
            <button type="button" class="btn btn-primary" id="btnAddNguoiKy">
                Thêm
            </button>

            <!-- Modal -->
            <!-- Button trigger modal -->
            <!-- Modal -->
            <div class="modal fade modal-lg" id="modalAddNguoiKy" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="titleAddNguoiKy"></h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form class="row g-3" id="formAddNguoiKy" style="margin-bottom:20px">
                                <div class="col-md-4">
                                    <label for="validationDefault01" class="form-label">Họ tên</label>
                                    <input type="text" class="form-control" id="hoTen">
                                </div>
                                <div class="col-md-4">
                                    <label for="fname" style="margin-bottom:0.5rem">Chức vụ</label>
                                    <select class="form-control" id="select_ChucVu" aria-label="Default select example" style="border: 1px solid #aaa; border-radius: 3px; padding: 5px; background-color: transparent; width: 100%; max-width: 100%;">
                                        <option value="NLB">Người lập bảng</option>
                                        <option value="PGD">Phó giám đốc Học Viện</option>
                                        <option value="TKCB2">Trưởng khoa Cơ bản 2</option>
                                        <option value="TKCNTT2">Trưởng khoa CNTT 2</option>
                                        <option value="TKKTDT2">Trưởng khoa KTDT 2</option>
                                        <option value="TKQTKD2">Trưởng khoa QTKD 2</option>
                                        <option value="TKVT2">Trưởng khoa VT 2</option>
                                        <option value="TPGV">Trưởng phòng giáo vụ</option>
                                        <option value="TPKTTC">Trưởng phòng KT-TC</option>
                                    </select>
                                </div>

                                <div class="col-md-4">
                                    <label for="fname" style="margin-bottom:0.5rem">Niên khóa áp dụng</label>
                                    <select onchange="onChange_Select_NienKhoa(event)" class="form-control" id="select_NienKhoa" aria-label="Default select example" style="border: 1px solid #aaa; border-radius: 3px; padding: 5px; background-color: transparent; width: 100%; max-width: 100%;">
                                    </select>
                                </div>

                                <div class="col-md-3">
                                    <label for="fname" style="margin-bottom:0.5rem">Học kỳ áp dụng</label>
                                    <select onchange="onChange_Select_HocKy(event)" class="form-control" id="select_HocKy" aria-label="Default select example" style="border: 1px solid #aaa; border-radius: 3px; padding: 5px; background-color: transparent; width: 100%; max-width: 100%;">
                                    </select>
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" id="btnCloseNguoiKy">Thoát</button>
                            <button type="button" class="btn btn-primary" id="btnSaveNguoiKy" onclick="saveNguoiKy(false)">Lưu</button>
                            <button type="button" class="btn btn-primary" id="btnSaveCloseNguoiKy" onclick="saveNguoiKy(true)">Lưu và thoát</button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal fade" id="modalLoadingNguoiKy" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered modal-sm">
                    <div class="modal-content" style="background-color:transparent !important; border:none !important">
                        <div class="modal-body">
                            <div class="text-center">
                                <div class="spinner-border" style="width: 3rem; height: 3rem;" role="status">
                                    <span class="visually-hidden">Loading...</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <br />  <br />
            <input type="checkbox" onchange="showAllNguoiKy()" id="showAll">
            <label for="validationDefault01" class="form-label">Hiển thị tất cả</label>
            <label id="notify" style="display: none;color: red;font-style: italic;font-size: 10pt;">* Ở chế độ hiển thị tất cả, bạn không thể thêm, chỉnh sửa, xóa người ký!</label>
            <table id="table_NguoiKy" class="display" style="width:100%">
                <thead>
                    <tr>
                        <th>id</th>
                        <th>Họ tên</th>
                        <th>Chức vụ</th>
                        <th>NKHK áp dụng</th>
                        <th>Mã NKHK</th>
                        <th>Chỉnh sửa</th>
                        <th>Xóa</th>
                        <th>Mã chức vụ</th>
                        <th>Tên niên khóa</th>
                    </tr>
                </thead>
                <tbody id="tbody">
                </tbody>
            </table>
        </div>
    </div>
</div>

