@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">
<link href="https://unpkg.com/gijgo@1.9.13/css/gijgo.min.css" rel="stylesheet" type="text/css" />
<link rel="stylesheet" href="~/css/bstreeview.css">
<link rel="stylesheet" href="~/css/bootstrap-treeview.css">
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" />
<script src="~/lib/sweet-alert/sweet_alert.js"></script>
<script src="~/lib/script/report-kl-giang.js"></script>
<style>
    * {
        box-sizing: border-box;
    }

    .row {
        margin-left: -5px;
        margin-right: -5px;
    }

    .column {
        float: left;
        width: 50%;
        padding: 5px;
    }

    /* Clearfix (clear floats) */
    .row::after {
        content: "";
        clear: both;
        display: table;
    }

    table {
        border-collapse: collapse;
        border-spacing: 0;
        width: 100%;
        border: 1px solid #ddd;
    }

    th, td {
        text-align: center;
        padding: 16px;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    label {
        font-weight: bold;
    }
</style>

<div class="modal fade" id="modalLoadingLTC" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-sm">
        <div class="modal-content" style="background-color:transparent !important; border:none !important">
            <div class="modal-body">
                <div class="text-center">
                    <div class="spinner-border" style="width: 3rem; height: 3rem;" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class=".container-fluid">
    <form action="/report/khoi-luong-giang" method="POST">
        <div class="row" style="height:300px">
            <label style="display: flex; font-size: 1.3rem; justify-content: center;align-items: center;">BÁO CÁO KHỐI LƯỢNG GIỜ GIẢNG - GIẢNG VIÊN CƠ HỮU</label>
            <div class="column" style="width: 18%; margin-left: 20px">
                <label for="fname">Niên khóa</label>
                <select onchange="onChange_Select_NienKhoa(event)" class="form-control" id="select_NienKhoa" style="border: 1px solid #aaa; border-radius: 3px; padding: 5px; background-color: transparent; width: 100%; max-width: 100%;"></select>
                <label for="fname">Học Kỳ</label>
                <select name="hocKy" onchange="onChange_Select_HocKy(event)" class="form-control" id="select_HocKy" style="border: 1px solid #aaa; border-radius: 3px; padding: 5px; background-color: transparent; width: 100%; max-width: 100%;"></select>
            </div>
            <div class="column" style="width: 18%; margin-left: 20px">
                <br />
                <div class="row">
                    <button type="submit" class="btn btn-secondary" id="btnPreview" style="width:40%">Preview</button>
                </div>
            </div>
        </div>
    </form>

</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>



