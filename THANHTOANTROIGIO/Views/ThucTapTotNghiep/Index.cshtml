@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">
<link href="https://unpkg.com/gijgo@1.9.13/css/gijgo.min.css" rel="stylesheet" type="text/css" />
<link rel="stylesheet" href="~/css/bstreeview.css">
<link rel="stylesheet" href="~/css/bootstrap-treeview.css">
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" />
<script src="~/lib/sweet-alert/sweet_alert.js"></script>
<script src="~/lib/script/thuc-tap-tot-nghiep.js"></script>
<style>
    * {
        box-sizing: border-box;
    }

    .row {
        margin-left: -5px;
        margin-right: -5px;
    }

    .column {
        float: left;
        width: 50%;
        padding: 5px;
    }

    /* Clearfix (clear floats) */
    .row::after {
        content: "";
        clear: both;
        display: table;
    }

    table {
        border-collapse: collapse;
        border-spacing: 0;
        width: 100%;
        border: 1px solid #ddd;
    }

    th, td {
        text-align: center;
        padding: 16px;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    label {
        font-weight: bold;
    }
</style>

<div class="modal fade" id="modalLoadingTTTN" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-sm">
        <div class="modal-content" style="background-color:transparent !important; border:none !important">
            <div class="modal-body">
                <div class="text-center">
                    <div class="spinner-border" style="width: 3rem; height: 3rem;" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class=".container-fluid">
    <div class="row" style="height:600px">
        <div class="column" style="width: 18%; margin-left: 20px">
            <div><label style="display: flex; font-size: 1.3rem; justify-content: center;align-items: center;height: 100%;">DANH SÁCH GIẢNG VIÊN</label></div>
            <label for="fname">Niên khóa</label>
            <select onchange="onChange_Select_NienKhoa(event)" class="form-control" id="select_NienKhoa" style="border: 1px solid #aaa; border-radius: 3px; padding: 5px; background-color: transparent; width: 100%; max-width: 100%;"></select>

            <label for="fname">Học Kỳ</label>
            <select onchange="onChange_Select_HocKy(event)" class="form-control" id="select_HocKy" style="border: 1px solid #aaa; border-radius: 3px; padding: 5px; background-color: transparent; width: 100%; max-width: 100%;"></select>

            <label for="fname">Khoa</label>
            <select onchange="onChange_Select_Khoa(event)" class="form-control" id="select_Khoa" style="border: 1px solid #aaa; border-radius: 3px; padding: 5px; background-color: transparent; width: 100%; max-width: 100%;"></select>
            <label for="fname" id="label_GV">Giảng viên</label>
            <div class="form-control" id="tree_GV"></div>
        </div>
        <div class="column" style="width:80%">
            <button type="button" class="btn btn-primary" id="btnAddTTTN">
                Thêm
            </button>
            <br />

            <!-- Modal -->
            <!-- Button trigger modal -->
            <!-- Modal -->
            <div class="modal fade modal-lg" id="modalAddTTTN" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="label_TTTN"></h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form class="row g-4" id="formAddTTTN" style="margin-bottom:20px">
                                <div class="col-md-3" style="margin-top: 10px;">
                                    <label for="inputTLC">Lớp</label>
                                    <input type="text" class="form-control" id="lop">
                                </div>
                                <div class="col-md-2" style="margin-top: 10px;">
                                    <label for="inputTLC">Hệ số HD</label>
                                    <input type="number" min="0" step="0.1" class="form-control" id="hsHuongDan" value="0.8">
                                </div>

                                <div class="col-md-2" style="margin-top: 10px;">
                                    <label for="inputTLC">Hệ số PB</label>
                                    <input type="number" min="0" step="0.1" class="form-control" id="hsPhanBien">
                                </div>

                                <div class="col-md-2" style="margin-top: 10px;">
                                    <label for="inputTLC">Số SV HD</label>
                                    <input type="number" min="0" class="form-control" id="soSinhVienHD">
                                </div>

                                <div class="col-md-2" style="margin-top: 10px;">
                                    <label for="inputTLC">Số SV PB</label>
                                    <input type="number" min="0" class="form-control" id="soSinhVienPB">
                                </div>

                                <div class="col-md-2" style="margin-top: 10px;">
                                    <label for="inputTLC">Số tuần</label>
                                    <input type="number" min="0" class="form-control" id="soTuan" value="1.0">
                                </div>
                                <div class="col-md-2" style="margin-top: 10px;">
                                    <label for="inputTLC">Thanh toán</label>
                                    <input type="number" class="form-control" id="thanhToan" readonly>
                                </div>


                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" id="btnCloseTTTN">Thoát</button>
                            <button type="button" class="btn btn-primary" id="btnSaveTTTN" onclick="saveTTTN(false)">Lưu</button>
                            <button type="button" class="btn btn-primary" id="btnSaveCloseTTTN" onclick="saveTTTN(true)">Lưu và thoát</button>
                        </div>
                    </div>
                </div>
            </div>

            <label for="fname" id="titleTTTN"></label>
            <table id="table_TTTN" class="display" style="width:100%">
                <thead>
                    <tr>
                        <th>Mã giảng viên</>
                        <th>Mã NKHK</th>
                        <th>Lớp</th>
                        <th>Số tuần</th>
                        <th>Số sinh viên HD</th>
                        <th>Hệ số HD</th>
                        <th>Số sinh viên PB</th>
                        <th>Hệ số PB</th>
                        <th>Chỉnh sửa</th>
                        <th>Xóa</th>
                    </tr>
                </thead>
                <tbody id="tbody">
                </tbody>
            </table>
        </div>
    </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
